mixin btn(color,text,typeBool,Class)
  - let type = typeBool ? 'button' : 'sumbit'
  button.btn(class=Class + " btn__" + color, type=type)
    span.btn__text= text

mixin link(color,text,goTo,Class,aos1,aos2,aos3,aos4)
  - let type = typeBool ? 'button' : 'sumbit'
  a.btn(class=Class + " btn__" + color, href=goTo data-aos=aos1 data-aos-duration=aos2 data-aos-easing=aos3 data-aos-delay=aos4)
    span.btn__text= text

mixin linkVideo(Class,link)
  a.btn-play(class=Class href=link)
    span.btn-play__text Watch Video 
    svg.btn-play__icon
      use(xlink:href="@img/sprite.svg#video-play")

mixin moreLink(text,href,Class)
  a.more(href=href, class=Class) 
    span.more__text=text
    svg.more__icon
      use(xlink:href="@img/sprite.svg#arrow-long")

mixin counter(Class)
  .counter(class=Class)
    button.counter__btn.counter__btn_minus(type="button") -
    span.counter__value 1
    button.counter__btn.counter__btn_plus(type="button") +

mixin sectionTitle(text,Class,aos1,aos2,aos3,aos4)
  .section-title(class=Class data-aos=aos1 data-aos-duration=aos2 data-aos-easing=aos3 data-aos-delay=aos4)
    svg.section-title__icon
      use(xlink:href="@img/sprite.svg#before-title-tree")
    h2.section-title__heading= text


