      if (imageExtension && imageType)
        picture
          source(srcset=imagePath+".webp" type="image/webp")
          source(srcset=imagePath+"."+imageExtension type="image/"+imageType )
          img.device-connecting__bg(src=imagePath+"."+imageExtension alt="")
      else 
        img.device-connecting__bg(src=imagePath, alt="")
    .container.device-connecting__container(data-aos="fade-left" data-aos-duration="500" data-aos-easing="ease-in-out")
